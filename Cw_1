#Zad1

def funkcja1(imie,nazwisko):
    return imie+"."+nazwisko
print(funkcja1("Marek","Bóbr"))
#zad2
def funkcja2(imie,nazwisko):
    nazwisko[0].upper()
    imie[0].upper()
    return  imie[0]+"."+nazwisko
print(funkcja2("Marek","Bóbr"))
# zad3
def funkcja3(pier__rok,ost_rok,wiek):
    return pier__rok*100+ost_rok-wiek
print(funkcja3(20,22,14))
#zad4
def funkcja4(imie,nazwisko,funkcja2):
    return funkcja2(imie,nazwisko)
print(funkcja4("Marek","Bóbr",funkcja2))
#zad5
def funkcja5(a,b):
    if a<0 and b<0:
        return print("nie są dodatnie")
    if b==0:
        return print("nie dzielimy przez zero")
    return print(a/b)
funkcja5(10,1)
